<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLogin_NguyenDinhhien"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F5F5F5">

    <!-- Tên App -->
    <TextView
        android:id="@+id/txtAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🍽️ MyFood"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:layout_marginBottom="32dp" />

    <!-- Username -->
    <EditText
        android:id="@+id/edtUsername_NguyenDinhhien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên đăng nhập"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Password -->
    <EditText
        android:id="@+id/edtPassword_NguyenDinhhien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Button -->
    <Button
        android:id="@+id/btnLogin_NguyenDinhhien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textStyle="bold" />

    <!-- Đăng ký -->
    <TextView
        android:id="@+id/txtRegister_NguyenDinhhien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa có tài khoản? Đăng ký"
        android:textColor="#6A1B9A"
        android:layout_marginTop="20dp"
        android:textSize="14sp" />

</LinearLayout>
