<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutDetail_NguyenDinhhien"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoodDetail_NguyenDinhhien"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtFoodNameDetail_NguyenDinhhien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên món ăn"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/txtFoodDescDetail_NguyenDinhhien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txtRestaurantInfo_NguyenDinhhien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà hàng: Pizza House - 123 Lê Lai"
            android:layout_marginTop="4dp"/>

        <RadioGroup
            android:id="@+id/radioSize_NguyenDinhhien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radioSmall_NguyenDinhhien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhỏ (+0đ)"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioLarge_NguyenDinhhien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớn (+10.000đ)"
                android:layout_marginStart="16dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/txtPrice_NguyenDinhhien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 120.000đ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnAddToCart_NguyenDinhhien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ hàng"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
